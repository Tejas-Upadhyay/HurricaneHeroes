# Hurricane Heroes - Environment Variables
# Copy this file to .env and update with your production values

# Django Secret Key (Generate using: python manage.py shell -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
SECRET_KEY=your-super-secret-key-change-this-in-production

# Debug Mode (False for production)
DEBUG=False

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-ec2-ip,localhost

# Database Configuration (for SQLite - default)
DATABASE_URL=sqlite:///db.sqlite3

# Database Configuration (for PostgreSQL - uncomment if using)
# DB_NAME=hurricane_heroes
# DB_USER=django_user
# DB_PASSWORD=your-db-password
# DB_HOST=localhost
# DB_PORT=5432

# Email Configuration (optional)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@hurricaneheroes.org

# Time Zone
TIME_ZONE=UTC

# Language
LANGUAGE_CODE=en-us

